<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_city_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_city_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:text="北京"
                android:textSize="40sp"
                android:textStyle="bold" />
            <!--            <TextView-->
            <!--                android:id="@+id/item_city_tv_temp"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textSize="40sp"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_marginRight="20dp"-->
            <!--                android:text="12℃"/>-->
            <ImageView
                android:id="@+id/item_city_line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/item_city_tv_city"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#808A87"/>

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_line1"
                android:layout_marginHorizontal="5dp"
                android:text="中国"
                android:textSize="16sp" />

            <TextView

                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_below="@id/item_city_line1"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tv_country"
                android:background="#808A87" />

            <TextView
                android:id="@+id/tv_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_line1"
                android:layout_marginHorizontal="5dp"
                android:layout_toRightOf="@id/tv_country"
                android:text="北京市"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_city_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_line1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="经纬:39.86364|116.28696"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>